import com.github.sarxos.webcam.Webcam;
import com.github.sarxos.webcam.WebcamStreamer;


public class Server {

	public static void main(String[] args) {
		new WebcamStreamer(8081, Webcam.getDefault(), 20, true);
		  do {
		    try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		  } while (true);
	}

}
